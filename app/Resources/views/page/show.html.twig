{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Page {{ page.titre }}</h1>
<div class="table-responsive">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Titre </th>
                <td>{{ page.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ page.contenu|raw }}</td>
            </tr>
        </tbody>
    </table>
</div>
	
</div>
<div class="container">
    <a href="{{ path('admin_page_edit', { 'id': page.id }) }}" class="btn btn-primary" role="button">Modifier cette page</a>
    {{ form_start(delete_form) }}
        <input type="submit" value="Supprimer cette page" class="btn btn-danger">
    {{ form_end(delete_form) }}
        <hr>
    <a href="{{ path('admin_page_index') }}" class="btn btn-info" role="button">Voir la liste des pages</a>
</div>
    
{% endblock %}
