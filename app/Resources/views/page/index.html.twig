{% extends 'base.html.twig' %}

{% block body %}
    <h1>Page list</h1>

    <table>
        <thead>
            <tr>
                <th>Titre de la page</th>
                <th>Contenu de la page </th>
                <th>Idpage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td><a href="{{ path('page_show', { 'id': page.idPage }) }}">{{ page.titrePage }}</a></td>
                <td>{{ page.contenu }}</td>
                <td>{{ page.idPage }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('page_show', { 'id': page.idPage }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('page_edit', { 'id': page.idPage }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('page_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
