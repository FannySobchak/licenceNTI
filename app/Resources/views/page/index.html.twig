{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="well">
    	<h1>Les pages disponibles</h1>
    </div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
            	<th>id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td><a href="{{ path('admin_page_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                <td>{{ page.titre }}</td>
                <td>{{ page.contenu|raw}}</td>
                <td>
                    <ul class="list-unstyled">
                        <li>
                            <a href="{{ path('admin_page_show', { 'id': page.id }) }}" class="btn btn-link" role="button">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_page_edit', { 'id': page.id }) }}" class="btn btn-link" role="button">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
 
 <a href="{{ path('admin_page_new') }}" class="btn btn-primary">Cr√©er une nouvelle page</a>
 
 </div>
    
{% endblock %}
