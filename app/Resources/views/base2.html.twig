<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}SIL-NTI{% endblock %}</title>


        {% block stylesheets %}


		<link rel="stylesheet" href="{{ asset('bootstrap-3.3.6.min.css') }}">
		<link rel="stylesheet" href="{{ asset('modern-business.css') }}">
    	<link href="{{ asset('font-awesome.min.css')}}" rel="stylesheet" type="text/css">
		<!--<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.2.1/foundation.min.css">-->

    	{% endblock %}

    </head>
    <body>

    <div class="container">
    	
		<div id="header" class="jumbotron">
			<img src="{{ asset('logoNTI.png') }}" alt="logo_licence" />
            
            <h1>Licence Professionnelle SIL-NTI</h1>
        </div>
		
		<nav class="navbar navbar-inverse" role="navigation">
        	<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand " href="{{ path('index') }}">Accueil</a>
				</div>
				<div id="maCarousel" class="carousel">
    		<ol class="carousel-indicators">
    			<li data-target="#mycarousel" data-slide-to="0" class="active"></li>
    			<li data-target="#mycarousel" data-slide-to="1"></li>
    			<li data-target="#mycarousel" data-slide-to="2"></li>

    		</ol>
    		<div class="carousel-inner">	
    			<div class="item active">
    				<img src="img/beach.jpg" alt="beach" class="img-responsive">
    			</div>
    		</div>
    	</div>		
					
				<div class="collapse navbar-collapse" id="myNavbar">
					<ul class="nav navbar-nav">
						{{ render(controller('NtiBundle:VoirPage:menu')) }}
					</ul>

					<ul class="nav navbar-nav navbar-right" >
						{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
							<li><a href="#" >{{ app.user.prenom }} {{ app.user.nom }}</a></li>
							{% if is_granted("ROLE_ADMIN") %}
								<li><a href="{{ path('admin_index') }}" >Administration</a></li>
							{% endif %}
							<li><a href="{{ path('fos_user_security_logout') }}" >Déconnexion</a></li>
						{% else %}
							<li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
						{% endif %}
					</ul>
				</div>
        	</div>
        </nav>

        {% block body %}{% endblock %}


        <hr>

        <footer>
        	<!-- recupere l'année courante -->
            <p>  SIL - NTI copyright {{ "now"|date('Y') }} </p> 
        </footer>


        {% block javascripts %}
			<script src="{{ asset('jquery-1.12.2.min.js') }}"></script>
			<script src="{{ asset('bootstrap-3.3.6.min.js') }}"></script>
			<script src="{{ asset('ckeditor/ckeditor.js') }}"></script>
		{% endblock %}
    </div>
    </body>
</html>
